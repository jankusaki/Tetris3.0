<Window x:Class="Tetris.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Start" Height="300" Width="400" Background="LightGray">
    <Border Margin="20" BorderThickness="1" BorderBrush="Black" Background="White" CornerRadius="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Margin="0 0 0 30" Text="TETRIS" HorizontalAlignment="Center" FontSize="48" FontWeight="UltraBold"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="StartGame" Padding="0 5" Margin="0 0 10 0 " Width="100"  Content="PLAY"/>
                <Button Click="ShowControls" Padding ="0 5" Margin="10 0 0 0"  Width="100" Content="CONTROLS"/>
            </StackPanel>

            <Button Click="ExitApplication"  Margin="10" Width="100"  Padding="5" Content="EXIT"/>
        </StackPanel>
    </Border>
</Window>
